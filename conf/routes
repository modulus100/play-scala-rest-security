# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# API Endpoints
#POST           /users/:userId/favouriteStudios/:studioId        controllers.BookController.add(userId: Int, studioId: Int)
#DELETE         /users/:userId/favouriteStudios/:studioId        controllers.BookController.remove(userId: Int, studioId: Int)
#GET            /users/:userId/favouriteStudios/:studioId        controllers.BookController.find(userId: Int, studioId: Int)
#GET            /users/:userId/favouriteStudios                  controllers.BookController.findAll(userId: Int)
#GET            /users                                           controllers.BookController.getAll()
#POST           /hello                                           controllers.BookController.sayHello()
#POST           /studio                                          controllers.BookController.studio()

POST          /book                controllers.BookController.create
GET           /book/:bookId        controllers.BookController.read(bookId: Int)
PUT           /book                controllers.BookController.update
DELETE        /book/:bookId        controllers.BookController.delete(bookId: Int)
GET           /book                controllers.BookController.allBooks

POST          /test                controllers.BookController.testJson

# Credentitials
POST          /signUp              controllers.CredentialController.signUp
POST          /signIn              controllers.CredentialController.signIn
GET           /signOut             controllers.CredentialController.signOut